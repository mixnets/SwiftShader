{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "deqp",
            "type": "lldb",
            "request": "launch",
            "preLaunchTask": "make",
            "program": "/ssd/src/deqp/build/external/vulkancts/modules/vulkan/deqp-vk",
            "args": [
                // "-n", "dEQP-VK.api.smoke.triangle",
                "-n", "dEQP-VK.spirv_assembly.instruction.compute.*",
            ],
            "cwd": "${workspaceRoot}",
            "expressions": "native",
            "linux": {
                "env": {
                    "VK_ICD_FILENAMES": "${workspaceFolder}/out/Linux/vk_swiftshader_icd.json",
                },
            },
        },
        {
            "name": "vk-unittests",
            "type": "lldb",
            "request": "launch",
            "preLaunchTask": "make",
            "program": "${workspaceRoot}/build/vk-unittests",
            "args": [
                "--gtest_filter=*SwiftShaderVulkanComputeTest*",
            ],
            "cwd": "${workspaceRoot}",
            "expressions": "native",
        },
    ]
}